{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "type": "module",
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/**/*", "tests/**/*"]
}
